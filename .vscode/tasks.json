{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-I/usr/include/SDL2",
                "-D_REENTRANT",
                "-lSDL2",
                "-g",
                "-o",
                "${workspaceFolder}/shiftgear",
                "${workspaceFolder}/*.c"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}